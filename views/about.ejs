<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>О нас | Школа фехтования</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>
    <main>
        <div class="container">
            <h1 class="section-title">О нашей школе</h1>
            <div id="aboutPageContent">
                <p style="text-align:center;max-width:700px;margin:0 auto;">Загрузка...</p>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/main.js"></script>
    <script>
    // Динамическая загрузка контента страницы "О нас"
    document.addEventListener('DOMContentLoaded', async function() {
        const contentDiv = document.getElementById('aboutPageContent');
        try {
            const response = await fetch('/api/pages/about');
            if (response.ok) {
                const page = await response.json();
                contentDiv.innerHTML = page.content || '<p>Контент пока не добавлен.</p>';
            } else {
                contentDiv.innerHTML = '<p>Контент пока не добавлен.</p>';
            }
        } catch (e) {
            contentDiv.innerHTML = '<p>Ошибка загрузки контента.</p>';
        }
    });
    </script>
</body>
</html> 